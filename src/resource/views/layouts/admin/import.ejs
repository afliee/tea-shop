<script>
    $(function () {
        $('.btn__approve').click(function () {
            const id = $(this).data('id');
            $.ajax({
                url: '/admin/imports/approve/' + id,
                method: 'PUT',
                success: function ( res ) {
                    if (res) {
                        $('.toast-body').text('Approve successfully');
                        $('.toast').toast('show');
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000)
                    }
                },
                error: function ( err ) {
                    console.log(err);
                    $('.toast-body').text('Approve failed');
                    $('.toast').toast('show');
                }
            })
        })

        $('.btn__reject').click(function () {
            const id = $(this).data('id');
            const button = $(this);
            $.ajax({
                url: '/admin/imports/reject/' + id,
                method: 'PUT',
                beforeSend: function () {
                    button.attr('disabled', true);
                    $('.toast-body').text('Rejecting...');
                    $('.toast').toast('show');
                },
                success: function ( res ) {
                    if (res) {
                        $('.toast-body').text('Reject successfully');
                        $('.toast').toast('show');
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000)
                    }
                },
                error: function ( err ) {
                    console.log(err);
                    $('.toast-body').text('Reject failed');
                    $('.toast').toast('show');
                }
            })
        })
    })
</script>

