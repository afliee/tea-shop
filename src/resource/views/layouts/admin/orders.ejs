<script>
    $(function () {
        $('.form-select').on('change', function () {
            const id = $(this).attr('id').split('-')[1];
            const status = $(this).val();

            console.log(id, status);
            $.ajax({
                url: `/admin/orders/${id}`,
                method: 'PUT',
                data: JSON.stringify({ status }),
                contentType: 'application/json',
                beforeSend: function () {
                    $('#modal-loader').modal('show');
                },
                success: function (res) {
                    $('#modal-loader').modal('hide');
                    console.log(res)
                    if (res?.status && res.status === 500) {
                        $('.toast').find('.toast-body').text(res.message);
                        $('.toast').toast('show');
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000)
                    } else {
                        $('.toast').find('.toast-body').text('Update status successfully');
                        $('.toast').toast('show');
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000)
                    }
                },
                error: function (err) {
                    console.log(err);
                    $('.toast').find('.toast-body').text('Something went wrong');
                    $('.toast').toast('show');
                }
            })
        })
    })
</script>
