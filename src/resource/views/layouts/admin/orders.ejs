                    <!--                    alert when add category-->
                    <% orders.forEach(order => { %>
                        <div class="divider">
                            <div class="divider-text"><%= order._id %></div>
                        </div>

                        <% order.orders.forEach(data => { %>
                            <button type="button" data-bs-target="#order-<%= data._id %>" data-bs-toggle="collapse"
                                    class="btn btn-outline-primary mb-2">
                                Order id: <%= data._id %> of #<%= data.name %>
                                <span class="mx-2 badge bg-warning">
                                    <%= data.isPaid ? 'PAID' : 'NOT PAID YET' %>
                                </span>

                                <span class="mx-2 badge bg-success">
                                    <%= data.status %>
                                </span>
                            </button>

                            <div class="collapse mb-2" id="order-<%= data._id %>">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-hover">
                                                <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Price</th>
                                                    <th>Quantity</th>
                                                    <th>Total</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <% data.products.forEach(product => { %>
                                                    <tr>
                                                        <td><%= product.name %></td>
                                                        <td><%= parseInt(product.price).toLocaleString('vi-VN', {
                                                                style: 'currency',
                                                                currency: 'VND',
                                                            }) %></td>
                                                        <td><%= product.quantity %></td>
                                                        <td><%= parseInt(product.price * product.quantity).toLocaleString('vi-VN', {
                                                                style: 'currency',
                                                                currency: 'VND',
                                                            }) %></td>
                                                    </tr>
                                                <% }); %>
                                                </tbody>
                                            </table>

                                            <div class="row my-2">
                                                <div class="col-6">
                                                    <strong>Status:</strong>
                                                        <span class="badge bg-success"><%= data.status %></span>
                                                    <br>
                                                    <strong>Count:</strong>
                                                        <span class="badge bg-success"><%= data.total %></span>
                                                    <br>
                                                    <strong>Created at:</strong>
                                                        <span class="text-muted"><%= new Date(data.createdAt).toLocaleDateString() %></span>
                                                    <br>
                                                    <strong>Note:</strong>
                                                        <span class="text-muted"><%= data.note %></span>

                                                    <div>
                                                        <select class="form-select" id="status-<%= data._id %>">
                                                            <% statuses.forEach(status => {%>
                                                                <option value="<%= status %>" <%= status === data.status ? 'selected' : '' %>><%= status %></option>
                                                            <%});%>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <strong>Express to:</strong>
                                                        <%= data.address %>
                                                    <br>
                                                    <strong>Total:</strong>
                                                        <%= parseInt(data.amount).toLocaleString('vi-VN', {
                                                        style: 'currency',
                                                        currency: 'VND',
                                                    }) %>
                                                    <br>
                                                    <strong>Payment:</strong>
                                                        <%= data.isPaid ? 'PAID' : 'NOT PAID YET' %>
                                                    <br>
                                                    <strong>Payment method:</strong>
                                                        <%= data.paymentMethod %>
                                                    <br>
                                                    <strong>Owner:</strong>
                                                        <span class="text-muted"><%= data.name %></span>
                                                    <br>
                                                    <strong>Email:</strong>
                                                        <span class="text-muted"><%= data.email %></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <% }); %>
