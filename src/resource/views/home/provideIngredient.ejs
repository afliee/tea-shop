<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Provide Ingredient</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playfair+Display:wght@700;900&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/home_index.css" rel="stylesheet">
</head>

<body>
<!-- Spinner Start -->
<div id="spinner"
     class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
</div>
<!-- Spinner End -->

<%- include('../partials/header.ejs', {
active: 'product',
currentUser: user
}); %>


<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">

    </div>
</div>
<!-- Page Header End -->


<!-- Products Start -->
<div class="container-fluid product py-5">
    <div class="container py-5">
        <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="fs-5 fw-medium fst-italic text-primary">Provide Your Ingredients</p>
            <h1 class="display-6">You can get a simple for format</h1>
        </div>
        <div class="d-flex justify-content-center align-items-center flex-column">
            <div class="mb-3 w-100 d-flex justify-content-center align-items-center">
                <button class="btn btn-primary">
                    <i class="bx bx-plus me-2"></i>
                    <span class="align-middle">Let drop to below zone</span>
                </button>
            </div>

            <div class="mb-3">
                <!-- File Upload -->
                <form action="/import/upload" method="post" class="dropzone" id="myAwesomeDropzone"
                      data-plugin="dropzone" data-previews-container="#file-previews"
                      data-upload-preview-template="#uploadPreviewTemplate">
                    <div class="fallback">
                        <input name="file" type="file"
                               accept="text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"/>
                    </div>

                    <div class="dz-message needsclick">
                        <i class="h1 text-muted dripicons-cloud-upload"></i>
                        <h3>Drop files here or click to upload.</h3>
                        <span class="text-muted font-13">The system just accept (.csv, .xls, .xlsx) format</span>
                    </div>
                </form>

                <!-- Preview -->
                <div class="dropzone-previews mt-3" id="file-previews"></div>
                <button class="btn btn-primary d-none w-100 mt-3 btn-save">Save Changes</button>
                <!-- file preview template -->
                <div class="d-none" id="uploadPreviewTemplate">
                    <div class="card mt-1 mb-0 shadow-none border">
                        <div class="p-2">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <img data-dz-thumbnail src="#"
                                         class="avatar-sm rounded bg-light dz-thumbnail" alt="">
                                </div>
                                <div class="col pl-0">
                                    <a href="javascript:void(0);" class="text-muted font-weight-bold dz-name"
                                       data-dz-name></a>
                                    <p class="mb-0" data-dz-size></p>
                                </div>
                                <div class="col-auto">
                                    <!-- Button -->
                                    <a href="" class="btn btn-link btn-lg text-muted" data-dz-remove>
                                        <i class="bx bx-crosshair"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table
                    id="product_table"
                    class="table table-responsive dt-responsive nowrap w-100 d-none mt-3"
            >
                <thead>
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Unit</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
            </table>
            <div class="modal fade" id="viewProduct" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Product's Information</h5>
                            <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"
                            ></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="nameWithTitle" class="form-label">Name</label>
                                    <input
                                            type="text"
                                            id="name"
                                            class="form-control"
                                            placeholder="Enter Name"
                                            name="name"
                                    />
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col-md">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea
                                            class="form-control"
                                            id="description"
                                            rows="3"
                                            name="description"
                                            placeholder="Enter Description"
                                    ></textarea>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col-6">
                                    <label for="price" class="form-label">Price</label>
                                    <input
                                            type="number"
                                            id="price"
                                            class="form-control"
                                            placeholder="Enter Price"
                                            name="price"
                                    />
                                </div>

                                <div class="col-6">
                                    <label for="expiredAt" class="form-label">Expired At</label>
                                    <input
                                            type="date"
                                            id="expiredAt"
                                            class="form-control"
                                            placeholder="Enter Expired At"
                                            name="expiredAt"
                                            min="<%= new Date().toISOString().split('T')[0] %>"
                                    />
                                </div>
                            </div>
                            <div class="col">
                                <label for="quantity" class="form-label">Quantity</label>
                                <input
                                        type="number"
                                        id="quantity"
                                        class="form-control"
                                        placeholder="Enter Quantity"
                                        name="quantity"
                                />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                    type="button"
                                    class="btn btn-outline-secondary"
                                    data-bs-dismiss="modal"
                            >
                                Close
                            </button>
                            <button type="button" class="btn btn-primary btn-save-change">
                                Save changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div
            class="bs-toast toast toast-placement-ex m-2 bottom-0 end-0"
            role="alert"
            aria-live="assertive"
            aria-atomic="true"
            data-delay="2000"
    >
        <div class="toast-header bg-primary">
            <i class="bx bx-bell me-2"></i>
            <div class="me-auto fw-semibold">Tea Loza</div>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Fruitcake chocolate bar tootsie roll gummies gummies jelly beans cake.
        </div>
    </div>
</div>
<!-- Products End -->

<%- include('../partials/footer.ejs') %>

