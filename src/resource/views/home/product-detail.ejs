<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playfair+Display:wght@700;900&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/home_index.css" rel="stylesheet">
</head>

<body>
<!-- Spinner Start -->
<div id="spinner"
     class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
</div>
<!-- Spinner End -->

<%- include('../partials/header.ejs', {
active: 'store'
}); %>

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">Acticle</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="/store">Pages</a></li>
                <li class="breadcrumb-item text-dark" aria-current="page"><%= product.name %></li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->


<!-- Article Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div>
                <div
                        class="bs-toast toast toast-placement-ex m-2 top-0 end-0"
                        role="alert"
                        aria-live="assertive"
                        aria-atomic="true"
                        data-delay="2000"
                >
                    <div class="toast-header bg-primary">
                        <i class="bx bx-bell me-2"></i>
                        <div class="me-auto fw-semibold">Tea Loza</div>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">Fruitcake chocolate bar tootsie roll gummies gummies jelly beans cake.</div>
                </div>
            </div>
            <div class="col-lg-5 wow fadeIn rounded-2" data-wow-delay="0.1s">
                <img class="img-fluid "
                     src="<%= product?.images.length ? product.images[0].url : '/img/default-product-thumbnail_1.jpg' %>"
                     alt="">
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="section-title">
                    <p class="fs-5 fw-medium fst-italic text-primary">Featured Acticle</p>
                    <h1 class="display-6"><%= product.name %></h1>
                </div>

                <h3 class="mb-3 mt-2 text-primary">
                    <%= parseInt(product.salePrice).toLocaleString('vi-VN', {
                        style: 'currency',
                        currency: 'VND'
                    }) %>
                </h3>

<!--                <a href="" class="btn btn-primary rounded-pill py-3 px-5">Buy Now</a>-->
                <div class="row">
                    <div class="col-4 mb-3">
                        <div class="buttons-group btn-group">
                            <button type="button" class="btn bg-primary py-2 btn-minus">
                                <i class="bi bi-dash"></i>
                            </button>

                            <input type="number" class="form-control py-2 input-quantity" id="number" value="1" min="1" max="<%= product.quantity %>" style="width: 100px;">

                            <button type="button" class="btn bg-primary py-2 btn-plus">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-8">
                        <button type="button" class="btn btn-primary w-100 py-2 btn__add-cart" data-product-id="<%= product.id %>">Add to cart</button>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <a role="button" class="btn btn-primary px-3 w-100 py-2" href="#" data-product-id="<%= product.id %>">Buy Now</a>
                    </div>
                </div>

                <p class="mb-4"><%= product.description %></p>
            </div>
        </div>

        <input type="hidden" name="user_id" id="user_id" value="<%= currentUser ? currentUser.id : null%>">
    </div>
</div>
<!-- Article End -->

<%- include('../partials/footer.ejs') %>

<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


<!-- JavaScript Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/lib/wow/wow.min.js"></script>
<script src="/lib/easing/easing.min.js"></script>
<script src="/lib/waypoints/waypoints.min.js"></script>
<script src="/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="/js/home/main.js"></script>
<script src="/js/utils/ui/util.function.js"></script>
<script src="/js/home/product-detail.js"></script>
</body>

</html>